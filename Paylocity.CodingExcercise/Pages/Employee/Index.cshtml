@page
@model Paylocity.CodingExcercise.Web.Pages.Employee.IndexModel
@{
}
<div class="text-center">
    <h1 class="display-4">Employee Benefits Deduction Calculator</h1>
    <div class="row justify-content-md-left">
        <div class="col">
            <form method="post">
                <div class="row row-margin">
                    <div class="col-2">
                        <label asp-for="@Model.NumberOfDependents">Number of Dependents</label>
                    </div>
                    <div class="col-2">
                        <select asp-for="@Model.NumberOfDependents" asp-items="@Model.Dependents" class="form-control"></select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-1">
                        <input type="submit" class="btn btn-primary" value="Submit" asp-page-handler="Submit" />
                    </div>
                </div>                   
            </form>
        </div>
    </div>
</div>
